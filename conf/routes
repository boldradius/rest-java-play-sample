# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.Application.index()

GET     /users                 controllers.Application.getUsers

#TODO COMMENT OUT THE FOLLOWING TO LEAVE AS AN EXERCISE FOR STUDENTS
GET     /users/:id             controllers.Application.getUser(id: Long)
POST    /users                 controllers.Application.createUser()
PUT     /users/:id             controllers.Application.updateUser(id: Long)
DELETE  /users/:id             controllers.Application.deleteUser(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
