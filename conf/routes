# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /users                      controllers.Application.getUsers()

# API ENDPOINTS
GET     /users/:id                  controllers.Application.getUser(id: Long)
POST    /users                      controllers.Application.createUser()
#PUT     /users/:id                  controllers.Application.updateUser(id: Long)   #Exercise 3
#DELETE  /users/:id                  controllers.Application.deleteUser(id: Long)   #Exercise 4




